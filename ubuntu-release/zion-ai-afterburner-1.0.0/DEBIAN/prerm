#!/bin/bash
# ZION AI Afterburner pre-removal script

set -e

echo "ğŸ”¥ Stopping ZION AI Afterburner service..."

# Stop service if running
if [ -d /run/systemd/system ]; then
    if systemctl is-active --quiet zion-ai-afterburner; then
        echo "â¹ï¸ Stopping zion-ai-afterburner service..."
        systemctl stop zion-ai-afterburner
    fi
    
    if systemctl is-enabled --quiet zion-ai-afterburner; then
        echo "ğŸ”“ Disabling zion-ai-afterburner service..."
        systemctl disable zion-ai-afterburner
    fi
    
    systemctl daemon-reload
else
    echo "â„¹ï¸ Skipping systemctl operations (chroot detected)"
fi

echo "âœ… Service stopped and disabled"

exit 0